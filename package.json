{
  "name": "idec",
  "version": "1.0.0",
  "description": "AI-Powered IDE with Claude, OpenAI, Groq, and Ollama Integration",
  "main": "src/main/main.js",
  "scripts": {
    "start": "concurrently \"bun run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "electron": "electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pack": "bun run build && electron-builder --dir",
    "dist": "bun run build && electron-builder",
    "dist:mac": "bun run build && electron-builder --mac",
    "dist:win": "bun run build && electron-builder --win",
    "dist:linux": "bun run build && electron-builder --linux"
  },
  "keywords": [
    "ide",
    "ai",
    "claude",
    "openai",
    "ollama",
    "groq",
    "electron",
    "code-editor"
  ],
  "author": "Adrian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrian/idec"
  },
  "build": {
    "appId": "com.idec.app",
    "productName": "IDEC",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "linux": {
      "category": "Development",
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "dmg": {
      "title": "IDEC Installer"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@monaco-editor/react": "^4.7.0",
    "file-icons-js": "^1.1.0",
    "framer-motion": "^12.27.0",
    "lucide-react": "^0.562.0",
    "node-pty": "^1.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron-builder": "^26.4.0",
    "html-webpack-plugin": "^5.6.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "style-loader": "^4.0.0",
    "wait-on": "^9.0.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  }
}
